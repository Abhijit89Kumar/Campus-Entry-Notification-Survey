# Google Sheets Configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Service Account Credentials (JSON content)
# For Vercel, paste the entire JSON content as a single line
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Alternative: Path to credentials file (for local development)
# GOOGLE_CREDENTIALS_PATH=./credentials.json

# Frontend API URL (set in Vercel frontend environment)
NEXT_PUBLIC_API_URL=https://your-backend-url.vercel.app
